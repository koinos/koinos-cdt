message(STATUS "Setting up Koinos Wasm Toolchain @VERSION_FULL@ at @CDT_ROOT_DIR@")

set(CMAKE_SYSTEM_NAME Generic)
set(CMAKE_SYSTEM_PROCESSOR wasm)
set(CMAKE_CROSSCOMPILING 1)
set(CMAKE_C_COMPILER_WORKS 1)
set(CMAKE_CXX_COMPILER_WORKS 1)

set(KOINOS_CDT_VERSION "@VERSION_FULL@")
set(KOINOS_SDK_VERSION "@VERSION_FULL@")

set(CMAKE_C_COMPILER "@CDT_ROOT_DIR@/wasi-sdk/bin/clang")
set(CMAKE_CXX_COMPILER "@CDT_ROOT_DIR@/wasi-sdk/bin/clang++")
set(CMAKE_ASM_COMPILER "@CDT_ROOT_DIR@/wasi-sdk/bin/clang")

set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)
set(CMAKE_CXX_EXTENSIONS OFF)

set(CMAKE_C_FLAGS " -O3 ")
set(CMAKE_CXX_FLAGS " -O3 ")
set(CMAKE_ASM_FLAGS " -fnative -fasm ")

add_compile_options( -I @CDT_ROOT_DIR@/include )

set(CMAKE_LINKER "@CDT_ROOT_DIR@/wasi-sdk/bin/lld")
set(CMAKE_SYSROOT "@CDT_ROOT_DIR@/wasi-sdk/share/wasi-sysroot")

set(CMAKE_C_LINK_EXECUTABLE "<CMAKE_LINKER> <LINK_FLAGS> <OBJECTS> -o <TARGET> <LINK_LIBRARIES>")
set(CMAKE_CXX_LINK_EXECUTABLE "<CMAKE_LINKER> <LINK_FLAGS> <OBJECTS> -o <TARGET> <LINK_LIBRARIES>")

set(CMAKE_EXECUTABLE_SUFFIX_C ".wasm")
set(CMAKE_EXECUTABLE_SUFFIX_CXX ".wasm")

set(CMAKE_FIND_ROOT_PATH "@CDT_ROOT_DIR@")
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)

# hack for OSX
set(CMAKE_OSX_SYSROOT="@SYSROOT_DIR@")
set(CMAKE_OSX_DEPLOYMENT_TARGET="")
